material {
    name : flat_color,
    requires : [color],
    shadingModel : unlit,
    blending : transparent,
    doubleSided : true
}

fragment {
    void material(inout MaterialInputs material) {
        prepareMaterial(material);

        vec4 c = getColor();
        // Premultiplied alpha (required by blending : transparent).
        c.rgb *= c.a;
        material.baseColor = c;
    }
}
